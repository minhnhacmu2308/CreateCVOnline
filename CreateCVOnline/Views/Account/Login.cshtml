@model CreateCVOnline.Models.LoginModel
@using CaptchaMvc.HtmlHelpers;

<!DOCUMENT html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Form</title>
    <!-- Import Bootstrap and JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js">
    </script>
    <!-- My CSS and JQuery -->
    <link href="~/Assets/css/main.css" rel="stylesheet">
    <script type="text/javascript" src="~/Assets/jquery/login.js"></script>
</head>
<body>
    <div class="cointainer-fluid bg">
        <div class="row justify-content-center">
            <div class="col-md-3 col-sm-6 col-xs-12 row-container">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <h1>Login with your information</h1>
                    <div class="form-group">
                        <label for="username">Username</label>
                        @Html.TextBoxFor(model => model.Username, new { @placeholder = "Enter Your Username", @value = "", @class = "form-control", @id = "username" })
                        <p class="usernameError"></p>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        @Html.PasswordFor(model => model.Password, new { @placeholder = "Your Password", @value = "", @class = "form-control", @id = "password" })
                        <p class="passwordError"></p>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Check me out</label>
                    </div>
                    @Html.Captcha(5)
                    <button type="submit" class="btn btn-success btn-block my-3">Login</button>
                }
            </div>
        </div>
    </div>
</body>
</html>


